<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
        <title>Document</title>
    </head>
<body>

    <%- include('./partials/scripts.ejs') %>
   

    <%- include('./partials/nav.ejs') %>

    <div class="container mt-3">
        <div class="row row-cols-4">
            <% blogs.forEach(blog => { %>
                <div class="card col" style="width: 18rem;">
                    <img src="<%= blog.coverImagerURL%>" class="card-img-top blog-image" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
    <style>
        .blog-image {
            width: 100%;
            height: 200px; /* You can adjust the height as needed */
            object-fit: cover; /* This property ensures the image covers the entire container */
        }
    </style>
    
    
    
   
    

   
</body>
</html>